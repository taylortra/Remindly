<div class="container">
  <form  action="/reminder" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="titleInput" placeholder="Title" name="title">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="descriptionInput" rows="3" placeholder="Description" name="description"></textarea>
    </div>
    <div class="form-group">
      <label for="cover photo">Cover Photo</label>
      <input type="file" class="form-control" placeholder="cover photo" name="cover">
    </div>
    <div class="form-group">
      <label for="randomCover">Random Cover Photo</label>
      <input type="checkbox" id="reminderItem" name="randomCover">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
